extends layout

block content

  if error
    p Error getting dynamic content.
  else
    span There are 
    | 
    span.red-text !{data.totalLength} sensors 
    | 
    span in the database

  .list-container
    ul
      li.tableheader
        .tableheader-standort Anbieter
        .tableheader-number Anzahl
      hr.line
      each val, index in data.providers
        li.tablerow
          img.owner-logo(src="../images/" + index + ".png")
          .owner-name= index
          .owner-number= val.length
          button.button-collapse
        ul.sublist
          each sensor in val
            li.sublist-item
              a(href= sensor.url)= sensor.app_id
            
  script(type='text/javascript', src="/javascripts/index.js")  
    
  